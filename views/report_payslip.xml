<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>
<template id="altex_report_payslip">
    <t t-call="report.html_container">
        <t t-foreach="docs" t-as="o">
            <t t-call="report.external_layout">
                <div class="page">
                    <h2>BULLETIN DE PAIE</h2>
                    <p t-field="o.name"/>
                    <table class="table table-condensed table-bordered">
                        <tr>
                            <td><strong>NOM</strong></td>
                            <td><span t-field="o.employee_id"/></td>
                            <td><strong>EMPLOI</strong></td>
                            <td><span t-field="o.employee_id.job_id"/></td>
                        </tr>
                        <tr>
                            <td><strong>Address</strong></td>
                            <td colspan="3">
                                <div t-field="o.employee_id.address_home_id"
                                    t-field-options='{"widget": "contact", "fields": ["address", "name", "phone", "fax"], "no_marker": true, "phone_icons": true}'/>
                            </td>
                        </tr>
                        <tr>
                            <td><strong>Email</strong></td>
                            <td><span t-field="o.employee_id.work_email"/></td>
                            <td><strong>Identification No</strong></td>
                            <td><span t-field="o.employee_id.identification_id"/></td>
                        </tr>
                        <tr>
                            <td><strong>Reference</strong></td>
                            <td><span t-field="o.number"/></td>
                            <td><strong>N° de sécurité sociale</strong></td>
                            <td><span t-field="o.employee_id.bank_account_id"/></td>
                        </tr>
                        <tr>
                            <td><strong>Date de</strong></td>
                            <td><span t-field="o.date_from"/></td>
                            <td><strong>Date a</strong></td>
                            <td><span t-field="o.date_to"/></td>
                        </tr>
                    </table>

                    <table class="table table-condensed">
                        <thead>
                            <tr>
                                <th>Code</th>
                                <th>Name</th>
                                <th>Quantity/rate</th>
                                <th>Amount</th>
                                <th>Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr t-foreach="get_payslip_lines(o.line_ids)" t-as="p"></tr>
                            <td>
                                    <span t-esc="p.code or ''"/>
                            </td>

                        </tbody>
                        <tr>
                            <td>Base S.S</td>
                            <td></td>
                            <td>Retenue S.S</td>
                            <td></td>
                            <td rowspan="2" >NET A PAYER</td>
                            <td rowspan="2"></td>
                        </tr>
                        <tr>
                            <td>Base IRG</td>
                            <td></td>
                            <td>Retenue IRG</td>
                            <td></td>

                        </tr>
                    </table>

                    <p class="text-right"><strong>Authorized signature</strong></p>

                    <table class="table table-signature"  style="border:1px solid black;width:100%" >
                        <tr>
                            <td style="text-align:left;padding: 20px;border:1px solid black"><strong>Gérant Altex:
                                <p>kaddour Guettaoui</p>
                                <p>Alger le <span t-field="o.date_d"/></p>
                            </strong></td>
                        </tr>
                    </table>
                </div>
            </t>
        </t>
    </t>
</template>
</data>
</openerp>
